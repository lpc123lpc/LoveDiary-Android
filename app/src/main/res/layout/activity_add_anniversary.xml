<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.gallery.AddAnniversary"
        app:cardUseCompatPadding="true">

    <EditText
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:id="@+id/add_anniversary_title"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:id="@+id/add_anniversary_content"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/add_anniversary_title"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="@+id/add_anniversary_title"
            app:layout_constraintEnd_toEndOf="@+id/add_anniversary_title"/>

    <EditText
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:id="@+id/add_anniversary_date"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="@+id/add_anniversary_title"
            app:layout_constraintTop_toBottomOf="@+id/add_anniversary_content"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="@+id/add_anniversary_content"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:radius="40dp"
            android:id="@+id/anniversary_confirm_button"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/add_anniversary_date"
            android:layout_marginTop="264dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:text="纪念日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/add_anniversary_title"
            app:layout_constraintStart_toStartOf="@+id/add_anniversary_title"/>

    <TextView
            android:text="纪念内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/add_anniversary_content"
            app:layout_constraintStart_toStartOf="@+id/add_anniversary_content"/>

    <TextView
            android:text="纪念日期"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintBottom_toTopOf="@+id/add_anniversary_date"
            app:layout_constraintStart_toStartOf="@+id/add_anniversary_date"/>

    <Button
            android:text="选择图片"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choose_card_picture"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/add_anniversary_date"
            android:layout_marginTop="60dp"
            app:layout_constraintHorizontal_bias="0.501"/>

    <ImageView
            android:layout_width="252dp"
            android:layout_height="210dp"
            app:srcCompat="@drawable/dog"
            android:id="@+id/add_picture_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_anniversary_date"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="32dp"
            android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>