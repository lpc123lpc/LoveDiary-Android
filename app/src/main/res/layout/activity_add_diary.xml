<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.AddDiary">


    <EditText
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:id="@+id/add_diary_title"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/add_diary_content"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/add_diary_title"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="@+id/add_diary_title"
            app:layout_constraintEnd_toEndOf="@+id/add_diary_title" android:shadowColor="@color/colorPrimaryDark"
            android:background="@color/colorSakura"/>

    <Button
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diary_confirm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_diary_content"
            android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.498"/>


</androidx.constraintlayout.widget.ConstraintLayout>