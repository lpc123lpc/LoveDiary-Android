<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        app:contentPadding="2dp" app:cardCornerRadius="10dp" app:cardUseCompatPadding="true"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="10dp" android:layout_margin="10dp">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textSize="24sp"
                android:visibility="visible"
                tools:text="@tools:sample/full_names" android:layout_alignParentStart="true"
                android:textColor="@color/colorPrimaryDark"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_date"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/card_name"
                tools:text="@tools:sample/date/mmddyy" android:layout_alignParentStart="true"
                android:textColor="@color/colorPrimaryDark"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/card_date"
                tools:text="@tools:sample/lorem[6]" android:layout_alignParentStart="true"
                android:textColor="@color/colorPrimaryDark"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>